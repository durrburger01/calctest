<body>
    <div class="container">
        <h1>âš¡ Rune Calculator</h1>
        
        <div class="input-group">
            <label for="runeType">Rune Type:</label>
            <select id="runeType" onchange="updateCalculation()">
                <option value="jade">Jade</option>
                <option value="demeter">Demeter</option>
                <option value="gusset">Gusset</option>
                <option value="phoenix">Phoenix</option>
                <option value="book">Book</option>
            </select>
        </div>

        <div class="rune-row">
            <div class="input-group">
                <label for="currentLevel">Current Level:</label>
                <input type="number" id="currentLevel" value="0" min="0" oninput="updateCalculation()">
            </div>
            <div class="input-group">
                <label for="targetLevel">Target Level:</label>
                <input type="number" id="targetLevel" value="10" min="0" oninput="updateCalculation()">
            </div>
        </div>

        <div class="rune-row">
            <div class="input-group">
                <label for="multiplier">Level Multiplier:</label>
                <input type="number" id="multiplier" value="1" min="0.1" step="0.1" oninput="updateCalculation()">
            </div>
            <div class="input-group">
                <label for="baseCost">Base Cost (Soul Eggs):</label>
                <input type="number" id="baseCost" value="1000" min="0" oninput="updateCalculation()">
            </div>
        </div>

        <div class="result-box">
            <div class="result-label">Total Soul Eggs Required:</div>
            <div class="result-value" id="totalCost">0</div>
        </div>

        <div class="result-box">
            <div class="result-label">Levels to Gain:</div>
            <div class="result-value" id="levelGain">0</div>
        </div>

        <button onclick="resetCalculator()">Reset</button>
    </div>

    <script>
        function updateCalculation() {
            const currentLevel = parseFloat(document.getElementById('currentLevel').value) || 0;
            const targetLevel = parseFloat(document.getElementById('targetLevel').value) || 0;
            const multiplier = parseFloat(document.getElementById('multiplier').value) || 1;
            const baseCost = parseFloat(document.getElementById('baseCost').value) || 0;

            const levelGain = Math.max(0, targetLevel - currentLevel);
            const totalCost = baseCost * Math.pow(multiplier, targetLevel) - baseCost * Math.pow(multiplier, currentLevel);

            document.getElementById('totalCost').textContent = Math.round(totalCost).toLocaleString();
            document.getElementById('levelGain').textContent = levelGain;
        }

        function resetCalculator() {
            document.getElementById('currentLevel').value = 0;
            document.getElementById('targetLevel').value = 10;
            document.getElementById('multiplier').value = 1;
            document.getElementById('baseCost').value = 1000;
            document.getElementById('runeType').value = 'jade';
            updateCalculation();
        }

        updateCalculation();
    </script>
</body>
